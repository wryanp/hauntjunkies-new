# Supabase Configuration
PUBLIC_SUPABASE_URL=your_supabase_url
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# CRITICAL: Required for Admin Panel
# Get this from Supabase Dashboard > Settings > API > service_role key
# WARNING: Never commit this key or expose it to client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Shopify Integration (Optional)
PUBLIC_SHOPIFY_DOMAIN=your-store.myshopify.com
PUBLIC_SHOPIFY_STOREFRONT_TOKEN=your_shopify_storefront_access_token

# Email Service (Optional - for contact forms)
RESEND_API_KEY=re_your_resend_api_key_here

# Simple Admin Login (fallback if Supabase not configured)
ADMIN_EMAIL=admin@hauntjunkies.com
ADMIN_PASSWORD=your_secure_password_here

# Google Analytics 4 (Optional - for tracking)
# Get your Measurement ID from Google Analytics: https://analytics.google.com
# Replace G-XXXXXXXXXX in src/app.html with your actual ID
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
