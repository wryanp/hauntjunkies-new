# Supabase Configuration
PUBLIC_SUPABASE_URL=your_supabase_url
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# CRITICAL: Required for Admin Panel
# Get this from Supabase Dashboard > Settings > API > service_role key
# WARNING: Never commit this key or expose it to client-side code
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Shopify Integration (Optional)
PUBLIC_SHOPIFY_DOMAIN=your-store.myshopify.com
PUBLIC_SHOPIFY_STOREFRONT_TOKEN=your_shopify_storefront_access_token

# Email Service (Optional - for contact forms)
RESEND_API_KEY=re_your_resend_api_key_here

# Production Email From Address
# Development: Use "Haunt Junkies <onboarding@resend.dev>" for testing
# Production: Use "Haunt Junkies <noreply@hauntjunkies.com>" after domain verification
# See docs/EMAIL-DOMAIN-VERIFICATION.md for setup instructions
RESEND_FROM_EMAIL="Haunt Junkies <onboarding@resend.dev>"

# Simple Admin Login (fallback if Supabase Auth not configured)
# SECURITY: Use bcrypt hash for password (RECOMMENDED)
# Generate hash by running: node scripts/generate-password-hash.js "YourPasswordHere"
ADMIN_EMAIL=admin@hauntjunkies.com
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here

# DEPRECATED: Plain text password (less secure, for backwards compatibility only)
# Use ADMIN_PASSWORD_HASH instead. If both are set, ADMIN_PASSWORD_HASH takes precedence.
# ADMIN_PASSWORD=your_secure_password_here

# Cloudflare Turnstile (CAPTCHA Protection)
# Get your keys from: https://dash.cloudflare.com/
# Site key is public (used in browser), secret key is private (used server-side)
PUBLIC_TURNSTILE_SITE_KEY=your_turnstile_site_key_here
TURNSTILE_SECRET_KEY=your_turnstile_secret_key_here

# Google Analytics 4 (Optional - for tracking)
# Get your Measurement ID from Google Analytics: https://analytics.google.com
# Replace G-XXXXXXXXXX in src/app.html with your actual ID
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
